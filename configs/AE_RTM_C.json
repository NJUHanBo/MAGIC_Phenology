{
    "name": "AE_RTM_C",
    "n_gpu": 1,
    "arch": {
        "type": "AE_RTM_corr",
        "args": {
            "input_dim": 11,
            "hidden_dim": 7,
            "rtm_paras": "configs/rtm_paras.json",
            "standardization": {
                "x_mean": "data/rtm/real/train_x_mean.npy",
                "x_scale": "data/rtm/real/train_x_scale.npy"
            }
        }
    },
    "data_loader": {
        "type": "SpectrumS2DataLoader",
        "args": {
            "data_dir": "data/rtm/real/train.csv",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        },
        "data_dir_valid": "data/rtm/real/valid.csv",
        "data_dir_test": "data/rtm/real/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/rtm",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "input_key": "spectrum",
        "output_key": "spectrum",
        "stablize_grad": true,
        "tensorboard": false,
        "wandb": false
    }
}