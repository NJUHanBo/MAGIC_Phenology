{
    "name": "AE_Mogi_B",
    "n_gpu": 1,
    "arch": {
        "type": "AE_Mogi",
        "args": {
            "input_dim": 36,
            "hidden_dim": 4,
            "mogi_paras": "configs/mogi/mogi_paras.json",
            "station_info": "configs/mogi/station_info.json",
            "standardization": {
                "x_mean": "data/mogi/train_x_mean.npy",
                "x_scale": "data/mogi/train_x_scale.npy"
            }
        }
    },
    "data_loader": {
        "type": "GPSSeqDataLoader",
        "type_test": "GPSDataLoader",
        "args": {
            "data_dir": "data/mogi/train.csv",
            "batch_size": 12,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        },
        "data_dir_valid": "data/mogi/valid.csv",
        "data_dir_test": "data/mogi/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss_mogi_reg",
    "loss_test": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/mogi",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "input_key": "displacement",
        "output_key": "displacement",
        "stablize_grad": true,
        "tensorboard": false,
        "wandb": false
    }
}