{
    "name": "PHYS_VAE_RTM_C",
    "n_gpu": 1,
    "arch": {
        "type": "PHYS_VAE_RTM",
        "args": {
            "input_dim": 11,
            "hidden_dim": 7,
            "rtm_paras": "configs/rtm_paras.json",
            "standardization": {
                "x_mean": "data/processed/rtm/real/train_x_mean.npy",
                "x_scale": "data/processed/rtm/real/train_x_scale.npy"
            }
        },
        "phys_vae": {
            "no_phy": false,
            "dim_z_aux2": 2,
            "dim_z_phy": 7,
            "activation": "relu",
            "num_units_feat": 128,
            "hidlayers_aux2_enc": [64, 32],
            "hidlayers_z_phy": [64, 32],
            "x_lnvar": -10.0
        }
    },
    "data_loader": {
        "type": "SpectrumS2DataLoader",
        "args": {
            "data_dir": "data/processed/rtm/real/train.csv",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        },
        "data_dir_valid": "data/processed/rtm/real/valid.csv",
        "data_dir_test": "data/processed/rtm/real/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/rtm",
        "save_period": 10,
        "log_step": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "input_key": "spectrum",
        "output_key": "spectrum",
        "stablize_grad": true,
        "tensorboard": false,
        "wandb": false,
        "phys_vae": {
            "epochs_pretrain": 0,
            "balance_kld": 0.1,
            "balance_lact_enc": 0.1,
            "balance_unmix": 0.1,
            "balance_data_aug": 0.1,
            "balance_lact_dec": 0.1
        }
    }
}