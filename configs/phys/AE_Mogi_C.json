{
    "name": "PHYS_VAE_Mogi_C",
    "n_gpu": 1,
    "arch": {
        "type": "PHYS_VAE",
        "args": {
            "physics": "Mogi",
            "input_dim": 36,
            "hidden_dim": 4,
            "mogi_paras": "configs/mogi_paras.json",
            "station_info": "configs/station_info.json",
            "standardization": {
                "x_mean": "data/processed/mogi/train_x_mean.npy",
                "x_scale": "data/processed/mogi/train_x_scale.npy"
            }
        },
        "phys_vae": {
            "no_phy": false,
            "dim_z_aux2": 2,
            "dim_z_phy": 4,
            "activation": "elu",
            "hidlayers_feat": [
                32
            ],
            "num_units_feat": 64,
            "hidlayers_aux2_enc": [
                32
            ],
            "hidlayers_z_phy": [
                32
            ]
        }
    },
    "data_loader": {
        "type": "GPSSeqDataLoader",
        "type_test": "GPSDataLoader",
        "args": {
            "data_dir": "data/processed/mogi/train.csv",
            "batch_size": 12,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 0
        },
        "data_dir_valid": "data/processed/mogi/valid.csv",
        "data_dir_test": "data/processed/mogi/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss_mogi_reg",
    "loss_test": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/mogi",
        "save_period": 10,
        "log_step": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "input_key": "displacement",
        "output_key": "displacement",
        "stablize_grad": true,
        "tensorboard": false,
        "wandb": false,
        "phys_vae": {
            "epochs_pretrain": 0,
            "x_lnvar": -9.0,
            "balance_kld": 1,
            "balance_lact_enc": 0.1,
            "balance_unmix": 0.1,
            "balance_data_aug": 0.1,
            "balance_lact_dec": 0.1
        }
    }
}